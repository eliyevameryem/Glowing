@using GlowingTemplate.Models;
@model Setting

<div class="container pt-3">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Key" class="form-label"></label>
            <input asp-for="Key" pleaseholder="Setting Key" class="form-control">
            <span asp-validation-for="Key" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Value" class="form-label"></label>
            <input asp-for="Value" pleaseholder="Setting Value" class="form-control">
            <span asp-validation-for="Value" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

